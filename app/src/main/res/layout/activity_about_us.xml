<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_register"
    android:layout_height="match_parent"
    tools:context="skinfonaut.locatebuddy.AboutUs">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:textColor="#f2f2f2"
                    android:shadowColor="#353dd1"
                    android:text="Locate Buddy"
                    android:layout_marginTop="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/textView7"
                    android:layout_alignEnd="@+id/textView7" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:text="   Version: 1.0.0" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="Contact Us: feedback.lbuddy@gmail.com"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView7"
                        android:layout_marginTop="20dp"
                        android:id="@+id/what_type"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="What are Type 1 - 3?"
                        />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/what_type"
                            android:id="@+id/type1"
                            android:layout_marginLeft="20dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="Type 1:\n The Message will be send about the need of police."

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/type1"
                            android:id="@+id/type2"
                            android:layout_marginLeft="20dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:text="Type 2:\n The Message will be send about the need of Medical Condition."

                            />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/type2"
                    android:id="@+id/type3"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Type 3:\n The Message will be send about the need of any other help"
                    />






            </RelativeLayout>
           </ScrollView>
</RelativeLayout>
