<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    tools:context="skinfonaut.locatebuddy.LoginActivity"
    android:background="@drawable/back2"
    >

       <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/Imglogo"
            android:src="@drawable/logo"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:ems="10"
            android:hint="Username"
            android:textColorHint="#403939"
            android:inputType="textPersonName"
            android:layout_below="@+id/Imglogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:ems="10"
            android:hint="Password"
            android:textColorHint="#403939"
            android:inputType="textPassword"
            android:layout_below="@+id/etUsername"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/RegisID"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Register Here"
            android:textColor="#403939"
            android:textSize="18dp"

            android:textStyle="bold"
            android:layout_below="@+id/forgetID"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/forgetID"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="#403939"
            android:text="Forgot Password"
            android:layout_below="@+id/etPassword"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/closeBt"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:background="#c1d5d6d6"
            android:text="Close"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/LoginBt"
            android:background="#c1d5d6d6"
            android:onClick="onLogin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="25dp"
            android:layout_alignRight="@+id/closeBt"
            android:text="Login"
            />

</RelativeLayout>
